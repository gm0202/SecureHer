rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own emergency contacts
    match /users/{userId}/emergency_contacts/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow public read access to location data
      allow read: if resource.data.isSharingLocation == true;
    }
    
    // Allow users to create their own user document during registration
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow reading location shares
    match /location_shares/{shareId} {
      allow read: if true; // Anyone can read location shares
      allow write: if request.auth != null; // Only authenticated users can create shares
    }
    
    // Allow public read access to location_sharing collection
    match /location_sharing/{sharingCode} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 